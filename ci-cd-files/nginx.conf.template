http {
    include       /etc/nginx/mime.types;
    default_type  application/octet-stream;

    log_format  main  '$remote_addr - $remote_user [$time_local] "$request" '
                      '$status $body_bytes_sent "$http_referer" '
                      '"$http_user_agent" "$http_x_forwarded_for"';

    access_log  /var/log/nginx/access.log  main;

    sendfile        on;
    keepalive_timeout  65;

    server {
        listen 80;
        server_name localhost;

        # Прокси для OpenAI
        location /openai/v1/ {
            resolver 127.0.0.11 valid=10s;
            proxy_pass https://api.openai.com/v1/;
            proxy_set_header Host api.openai.com;
            rewrite ^/openai/v1/(.*) /v1/$1 break;
        }

        # Прокси для Yandex Cloud
        location /yandex/foundationModels/v1/ {
            resolver 127.0.0.11 valid=10s;
            proxy_pass https://llm.api.cloud.yandex.net/foundationModels/v1/;
            
            proxy_set_header Authorization "Bearer ${YANDEX_API_KEY}";
            proxy_set_header x-folder-id ${YANDEX_FOLDER_ID};
            
            proxy_set_header Host llm.api.cloud.yandex.net;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
            
            rewrite ^/yandex/foundationModels/v1/(.*) /foundationModels/v1/$1 break;
        }

        # Обратный прокси для бэкенда
        location / {
            proxy_pass http://backend:${APP_PORT};
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
        }
    }
}